@page "/"

<PageTitle>Home - Jørund Vatle Sandgren</PageTitle>

<div class="space-y-8 px-4 pb-4">
    <!-- Profile Card -->
    <div class="border border-border bg-card/30 p-6 rounded">
        <div class="flex items-center gap-6">
            <div class="w-32 h-32 rounded border-2 border-border flex items-center justify-center bg-muted">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-20 h-20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"></path>
                    <circle cx="12" cy="7" r="4"></circle>
                </svg>
            </div>
            <div class="text-left">
                <h1 class="text-3xl font-bold">
                    <span class="text-terminal-user">Jørund</span>
                    <span> </span>
                    <span class="text-terminal-host">Vatle Sandgren</span>
                </h1>
                <p class="text-header-sub">// Backend Developer in Training</p>
            </div>
        </div>
    </div>

    <!-- Typewriter line -->
    <div class="py-4">
        <TypewriterText />
    </div>

    <!-- Bio with command -->
    <div class="space-y-2">
        <p>
            <span class="text-terminal-prompt">$ </span>
            <span class="text-terminal-command">cat about.txt</span>
        </p>
        <div class="border-l-2 pl-4 text-muted-foreground">
            <p>Samfunnsengasjert og kreativ type med stort hjerte,</p>
            <p>og flink til å ta vare på medmenneskje.</p>
            <p>Romfartsnerd, motorhovud, tekstgalning, trommis, gamer og teiknar.</p>
        </div>
    </div>

    <!-- GitHub link with command -->
    <div class="space-y-2">
        <p>
            <span class="text-terminal-prompt">$ </span>
            <span class="text-terminal-command">open https://github.com/jaurund</span>
        </p>
        <a href="https://github.com/jaurund" target="_blank" rel="noopener noreferrer" class="gh-pill inline-block" aria-label="Open GitHub profile" title="GitHub: jaurund">
            <img src="/github-logo.png" alt="GitHub" class="gh-logo" />
        </a>
    </div>

    <!-- Contribution graph -->
    <div class="space-y-2">
        <p>
            <span class="text-terminal-prompt">$ </span>
            <span class="text-terminal-command">git log --oneline --graph</span>
        </p>
        <div class="border border-border bg-card/30 p-4 rounded overflow-x-auto">
            <img src="https://ghchart.rshah.org/jaurund" alt="GitHub contributions chart for jaurund" style="width:100%;height:auto;" />
        </div>
    </div>
</div>