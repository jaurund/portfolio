@page "/"

<PageTitle>Home - Jørund Vatle Sandgren</PageTitle>

<div class="home-container">
    <div class="home-content">
        <!-- Profile Section -->
        <div class="profile-section">
            <div class="profile-image">
                <svg xmlns="http://www.w3.org/2000/svg" width="128" height="128" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"></path>
                    <circle cx="12" cy="7" r="4"></circle>
                </svg>
            </div>

            <h1 class="profile-name">
                <span class="name-first">Jørund</span>
                <span class="name-last">Vatle Sandgren</span>
            </h1>
        </div>

        <!-- Typewriter Section -->
        <div class="typewriter-section">
            <TypewriterText />
        </div>

        <!-- GitHub Button -->
        <div class="github-section">
            <a href="https://github.com/jaurund" target="_blank" rel="noopener noreferrer" class="github-button">
                <img src="/github-logo.png" alt="GitHub" class="github-logo" />
            </a>
        </div>

        <!-- Bio Section -->
        <div class="bio-section">
            <p>
                Samfunnsengasjert og kreativ type med stort hjerte, og flink til å ta vare på
                medmenneskje. Romfartsnerd, motorhovud, tekstgalning, trommis, gamer og teiknar.
            </p>
        </div>
    </div>
</div>