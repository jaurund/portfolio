@rendermode InteractiveServer

<aside class="sidebar @(isExpanded ? "expanded" : "")" @onmouseenter="ExpandSidebar" @onmouseleave="CollapseSidebar">
    <!-- Navigation items -->
    <nav class="sidebar-nav">
        <NavLink href="" Match="NavLinkMatch.All" class="sidebar-link">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="sidebar-icon">
                <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                <polyline points="9 22 9 12 15 12 15 22"></polyline>
            </svg>
            <span class="sidebar-label">Home</span>
        </NavLink>

        <NavLink href="cv" class="sidebar-link">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="sidebar-icon">
                <rect x="2" y="7" width="20" height="14" rx="2" ry="2"></rect>
                <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"></path>
            </svg>
            <span class="sidebar-label">CV</span>
        </NavLink>

        <NavLink href="projects" class="sidebar-link">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="sidebar-icon">
                <polygon points="12 2 2 7 12 12 22 7 12 2"></polygon>
                <polyline points="2 17 12 22 22 17"></polyline>
                <polyline points="2 12 12 17 22 12"></polyline>
            </svg>
            <span class="sidebar-label">Projects</span>
        </NavLink>

        <a href="https://github.com/jaurund" target="_blank" rel="noopener noreferrer" class="sidebar-link">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="sidebar-icon">
                <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
            </svg>
            <span class="sidebar-label">GitHub</span>
        </a>
    </nav>

    @if (isExpanded)
    {
        <div class="github-contributions">
            <div class="contributions-title">Contributions</div>
            <div class="contributions-placeholder">
                <p>GitHub calendar would go here</p>
            </div>
        </div>
    }
</aside>

@code {
    private bool isExpanded = false;

    private void ExpandSidebar()
    {
        isExpanded = true;
    }

    private void CollapseSidebar()
    {
        isExpanded = false;
    }
}

